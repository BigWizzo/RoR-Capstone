        <div class="col-md-3">
          <div class="well">
            <h4>Users</h4>
            <p>1 Million</p> 
          </div>
        </div>
        <div class="col-md-3">
          <div class="well">
            <h4>Pages</h4>
            <p>100 Million</p> 
          </div>
        </div>
        <div class="col-md-3">
          <div class="well">
            <h4>Sessions</h4>
            <p>10 Million</p> 
          </div>
        </div>
        <div class="col-md-3">
          <div class="well">
            <h4>Bounce</h4>
            <p>30%</p> 
          </div>
        </div>
      </div>
      <div class="media">
      <% @subjects.each do |subject| %>
        <% subject.clockings.each do |clocking| %>
          <%if subject.title != "External"%>
            <p><%= image_tag subject.icon.variant(resize: '100x100') %></p>
            <div class="media-body">
              <h5 class="mt-0"><%= clocking.topic %></h5>
              <p><%= clocking.details %></p>
              <div class="dtn">
                <p><%= clocking.duration %></p>
              </div>
            </div>
          <%end%>
        <% end %>
      <%end%>
      </div>
      <div class="well container">
        <h4>All Clockings</h4>
        <p>All your subject based clockings</p>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="well">
          <% @subjects.each do |subject| %>
            <% subject.clockings.each do |clocking| %>
              <%if subject.title != "External"%>
                <div class="icon">
                  <p><%= image_tag subject.icon.variant(resize: '200x200') %></p>
                </div>
                <div class="top-det">
                  <p><%= clocking.topic %></p>
                  <p><%= clocking.details %></p>
                </div>
                <div class="dtn">
                  <p><%= clocking.duration %></p>
                </div>
              <%end%>
            <% end %>
          <%end%>
          </div>
        </div>
      </div>
      <div class="well container">
        <h4>External Clockings</h4>
        <p>All your non subject based clockings</p>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="well">
          <% @subjects.each do |subject| %>
            <% subject.clockings.each do |clocking| %>
              <%if subject.title == "External"%>
                <p><%= clocking.topic %></p>
                <p><%= clocking.details %></p>
                <p><%= clocking.duration %></p>
                <%# <p><%= image_tag subject.icon.variant(resize: '500x500') </p> %>
                <p><%= image_tag "default.jpg" %></p>
              <%end%>
            <% end %>
          <%end%>
          </div>
        </div>
      </div>
    </div>
