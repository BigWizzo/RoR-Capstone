<div class="d-none d-md-block">
  <h1 class="p-3 text-center m-0 blue-bg lt-gray-clr">Select Subject</h1>
</div>

<div class="container-fluid">
  <div class="row content">

  <%= render 'subjects/nav' %>

    <div class="col-md-9">

      <p>Please select the Subject for your Clocking below or
        <strong><%= link_to 'create a new Subject', new_subject_path%></strong>
      </p>

      <div class="select">
        <% @subjects.each do |subject| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= link_to subject.title, new_subject_clocking_path(subject_id: subject.id), method: :get %>
            </li>
          </ul>
        <%end%>
      </div>
    </div>
  </div>
</div>
