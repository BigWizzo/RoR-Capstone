<div class="d-none d-md-block">
  <h1 class="p-3 text-center">
    <%=@subject.title%> Clockings
  </h1>
</div>

<div class="container-fluid">
  <div class="row content">

  <%= render 'subjects/nav' %>
    
    <div class="col-md-9">
      <% for clocking in @subject.clockings %>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-3 card-wrap">
              <%if @subject.title != "External"%>
                <%= image_tag(@subject.icon.variant(extent: "10:7"), class: "card-img") %>
              <%elsif @subject.title == "External"%>
                <%= image_tag("default.jpg", class: "card-img") %>
              <%end%>
            </div>
            <div class="col-7">
              <div class="card-body py-1">
                <h5 class="card-title m-0"><%= clocking.topic %></h5>
                <p class="card-text mb-2">
                  <small class="text-muted">
                    Created: <%= clocking.created_at.strftime("#{clocking.created_at.day.ordinalize} %B %Y") %>
                  </small>
                </p>
                <p class="card-detail mb-2"><%= clocking.details %></p>
              </div>
            </div>
            <div class="col-2">
              <h5 class="row justify-content-center m-3"><%= clocking.duration %> Hours</h5>
              <div>
                <span>
                  <%= link_to 'Edit', edit_subject_clocking_path(@subject, clocking) %>
                </span>
                <span>
                  <%= link_to 'Destroy', [@subject, clocking], method: :delete, data: { confirm: 'Are you sure?' } %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>

    <%= link_to 'Edit', edit_subject_path(@subject) %> |
    <%= link_to 'New Clocking', new_subject_clocking_path(@subject) %> |
    <%= link_to 'Back to All Subjects', subjects_path %>
  </div>
</div>
