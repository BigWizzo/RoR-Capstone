<div class="w-25 m-auto">
<h2 class="text-center">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group field">
    <%= f.label :username %><br />
    <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "username" %>
  </div>

  <div class="form-group field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
